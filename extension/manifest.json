{
  "manifest_version": 3,
  "name": "Task Recorder",
  "version": "1.0",
  "description": "Record tasks in the format of a todo list",
  "permissions": [
    "tabs",
    "activeTab",
    "windows",
    "storage",
    "identity",
    "contextMenus"
  ],
  "oauth2": {
    "client_id": "760592949122-eeig8dofiiven0t5ct12s7o48n82betb.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/calendar", "https://www.googleapis.com/auth/calendar.events", "https://www.googleapis.com/auth/calendar.freebusy"]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "home.html"
  },
  "content_scripts": [
      {
        "html": ["home.html"],
        "js": ["scripts/content.js"],
        "matches": [
          "https://developer.chrome.com/docs/extensions/*",
          "https://developer.chrome.com/docs/webstore/*",
          "https://www.google.com/*"
        ]
      }
  ]
}